<div id="main">
	<div class="block">
		<div class="secondary-navigation">
			<ul>
				<li class="active-first">
					<a href="#">Edition de la page</a>
				</li>
			</ul>
			<div class="clear"></div>
		</div>
		<div class="content">
			<div class="inner">
					<% form_for @user, :url => {:action => "update"}, :html => { :class => "form" } do |f| %>
						<div class="flash">
							<%= f.error_messages %>
						</div>
						<div class="group">
							<%= f.label :openid_identifier, "OpenID" %>
							<%= f.text_field :openid_identifier, :class => "text_field", :disabled => true %>
							<span class="description">Ton open id. De la forme https://openid.octo.com/users/cbl<span>
						</div>
						
						<div class="group">
							<%= f.label :username, "Identifiant" %>
							<%= f.text_field :username, :class => "text_field" %>
							<span class="description">L'identifiant de ta page<span>
						</div>

						<div class="group">
							<%= f.label :firstname, "Prénom" %>
							<%= f.text_field :firstname, :class => "text_field" %>
							<span class="description">Ben ... ton prénom</span>
						</div>
						
						<div class="group">
							<%= f.label :lastname, "Nom" %>
							<%= f.text_field :lastname, :class => "text_field" %>
							<span class="description"> ... et ton nom</span>
						</div>
						
						<div class="group">
							<%= f.label :twitter_identifier, "Compte Twitter" %>
							<%= f.text_field :twitter_identifier, :class => "text_field" %>
							<span class="description">L'identifiant que tu utilises sur Twitter</span>
						</div>
						
						<div class="group">
							<%= f.label :blog_feed_url, "Feed RSS Octo Talks:" %>
							<%= f.text_field :blog_feed_url, :class => "text_field" %>
							<span class="description">Ton feed RSS sur OctoTalks. De la forme http://blog.octo.com/author/fhi/feed</span>
						</div>
						
						<div class="group navform">
							<%= f.submit "Valider", :class => "button" %>
							ou
							<%= link_to "Annuler", public_page_path %>
							ou
						  	<%= link_to "Détruire le compte", destroy_page_path, :method => "delete" %>
						</div>

				  <% end %>
			</div>
		</div>
	</div>	
</div>


